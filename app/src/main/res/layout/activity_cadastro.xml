<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FADFA1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/botaoVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@null"
        android:src="@drawable/icone_voltar" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lilita_one"
        android:text="Cadastro de UsuÃ¡rio"
        android:textColor="@color/black"
        android:paddingBottom="50dp"
        android:textSize="34sp" />


    <EditText
        android:id="@+id/nomeUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:hint="Nome Completo"
        android:inputType="text"
        android:padding="5dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/emailUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/senhaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerTipoSangue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:backgroundTint="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:padding="5dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etDataNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:hint="dd/mm/yyyy"
        android:inputType="datetime"
        android:padding="5dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/celularUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:hint="Cel 81 9 9999-9999"
        android:inputType="phone"
        android:padding="5dp"
        android:textSize="24sp"
        android:maxLength="11"/>

    <Spinner
        android:id="@+id/spinnerCidadeUf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFF4EA"
        android:backgroundTint="#FFF4EA"
        android:fontFamily="@font/lilita_one"
        android:padding="5dp"
        android:textSize="24sp" />


    <Button
        android:id="@+id/botaoCadastro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#C96868"
        android:fontFamily="@font/lilita_one"
        android:text="Cadastrar"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/botaoSignInGoogle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:backgroundTint="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/lilita_one"
        android:text="Login com Google"
        android:onClick="onClick" />

</LinearLayout>
